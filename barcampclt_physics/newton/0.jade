block vars
  - pageTitle = 'Position'

block content
  ul#menu
    li
      a(href='/') Home
    li
      a(href='1.html') Next

  canvas#surface(width='600', height='400')
  pre
    code#source
      | var ball = {
      |   x: 300,
      |   y: 200,
      |   r: 15
      | };

  script.
    // Version 0: Position

    var ball = {
      x: 300,
      y: 200,
      r: 15
    };

    var canvas = document.getElementById("surface");
    var ctx = canvas.getContext('2d');

    setInterval(function() {

      // Clear display
      ctx.save();
        ctx.fillStyle = "rgba(0, 0, 0, .2)";
        ctx.fillRect(0, 0, canvas.width, canvas.height);
      ctx.restore();

      // Draw ball
      ctx.save();
        ctx.translate(ball.x, ball.y);
        ctx.fillStyle = "#fff";
        ctx.beginPath();
        ctx.arc(0, 0, ball.r, 0, Math.PI * 2, true);
        ctx.closePath();
        ctx.fill();
      ctx.restore();

    }, 1000 / 77);
