@import 'normalize';
 

// quick hack to get canvas responsive
img,
canvas
  max-width 100%


html
  background #e2e5e1

#background-container
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  z-index 1
  overflow hidden
  > img
    position absolute
    width 110%
    left 0
    bottom 0
  #background-back
    max-width 100%
  #background-mid
    max-width 105%
  #background-front
    max-width 110%

#main
  z-index 2
  width 90%
  margin 1em auto
  background-color rgba(255, 255, 255, 0.5)
  border 1px solid #999
  border-radius 5px
  padding 2.5%
  position relative

#logo
  img
    max-width 100%
    border 0

.notice
  background #f7f4ba
  border-radius 3px
  border 1px solid #ddd588
  font-weight bold
  margin -2em auto 0
  padding .375em .75em
  text-align center
  width 50%

#demo_container
  margin 10px auto
  position relative
  background #000
  border-radius 5px
  padding 5px
  border 1px solid #999
  box-shadow 0 0 10px #000


.right
  float right
.left
  float left
.clear
  clear both




