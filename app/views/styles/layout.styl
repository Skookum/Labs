@import 'mixins';
@import 'normalize';
@import 'animations'

// @group general

// quick hack to get canvas responsive
img, canvas
  max-width 100%

ul, ul li
  list-style none
  margin 0
  padding 0

a
  color #fff
  text-decoration none

.right
  float right
.left
  float left
.clear
  clear both

// @end general

// @group base + layout

html
  background #e2e5e1

body
  //font-family Consolas, "Andale Mono WT", "Andale Mono", "Lucida Console", "Lucida Sans Typewriter", "DejaVu Sans Mono", "Bitstream Vera Sans Mono", "Liberation Mono", "Nimbus Mono L", Monaco, "Courier New", Courier, monospace;


#background-container
  display none

#main
  //z-index 2
  //position relative

#header
  margin-bottom 2.5%

#main
  >header,
  >section,
  >div
    background rgba(45, 51, 42, 0.95)
    color #fff
    vertical-align top
    padding 2.5%

// @end base + layout

// @group header + notification

#logo
  margin 0
  img
    max-width 100%
    border 0

h1.page-title
  float right
  text-align right


.notice
  background #F0EA7F
  color rgb(45, 51, 42)
  border-radius 3px
  border 1px solid #C7B938
  font-weight bold
  margin -5.5% auto 0
  padding .375em .75em
  text-align center
  width 50%

  a
    color rgb(45, 51, 42)
    text-decoration underline

// @end header + notification

// @group styles

#projects-list, #projects-tags
  display inline-block
  vertical-align top
#projects-list
  width 75%
  margin-right 5%
#projects-tags
  width 20%
  margin-top 1em
  ul
    li
      display inline-block
      margin 0.5em
      a, a:visited
        display inline-block
        padding 0.25em 0.5em
        background two-stop(#fff, #ddd)
        border-radius 4px
        color #000
        &:active
          background two-stop(#ddd, #fff)
      &.selected
        a, a:visited
          background two-stop(#63abf7, #5e99cd)
          color #fff
      &.all
        display block
        border-bottom 2px solid #000
        padding-bottom 0.5em

.projectlist
  transition-property height
  transition-duration 0.5s
  transition-delay 0
  li
    background rgba(255,255,255,.5)
    position relative
    display inline-block
    margin 10px
    padding 1px
    width 150px
    height 150px
    border 2px solid #000
    transition-property opacity, width, height, padding, margin, border-width, transform, -moz-transform, -webkit-transform, -o-transform, -ms-transform
    transition-duration 0.5s
    transition-timing-function ease-in-out
    transition-delay 0
    img
      position absolute
      left 0
      top 0
      z-index 99
      transition-property all
      transition-duration 0.75s
      transition-timing-function ease-out
      max-width none
      transform-style preserves-3d
      backface-visibility hidden
    &.project-hidden
      width 0px
      height 0px
      padding 0px
      margin 0px
      border-width 0px
      opacity 0
      transform scale3d(0,0,0)
      span
        display none
    &.project-modal
      img
        z-index 109
        padding 0px
        border-width 0px
        transform rotateY(180deg)
      span
        display none
    img
      margin 0
      padding 0
  a
    display block
    transition(all .2s linear)
    overflow hidden
    text-decoration none

    &:focus,
    &:hover
      text-shadow 0 1px 1px #666

      span
        background #000
        border-top-color transparent
        text-decoration underline

  .screenthumb
    width 150px
    height 150px

  span
    position absolute
    background rgba(0,0,0,0.75)
    box-shadow 0 -1px 0 #000
    border-top 1px solid rgba(255,255,255,.5)
    left 1px
    right 1px
    bottom 1px
    padding 5px

#projects-modal
  position fixed
  border-radius 5px
  left 20%
  right 20%
  top 20%
  bottom 20%
  z-index 120
  border 1px solid #999
  padding 35px
  background rgba(0,0,0,0.95)
  display none
  box-shadow 0 0 10px #fff
  transform-style preserves-3d
  transform rotateY(180deg)
  img
    margin-right 20px
    margin-bottom 20px
    border 1px solid #999
    border-radius 5px
  a.button
    background #fff
    color #333
    padding 5px 10px
    border-radius 5px
    border 1px solid #999
  a.closer
    background url("/images/x.png") no-repeat
    width 30px
    height 30px
    display inline-block()
    z-index 9999
    position absolute
    top -15px
    right -15px
    cursor pointer
  &.shown
    transition-property all
    transition-duration 0.75s
    transition-timing-function ease-out
    transform rotateY(360deg) translateZ(2000px)
    backface-visibility hidden
#projects-modal-overlay
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background rgba(0,0,0,0.7)
  display none
  z-index 11
  transition-property all
  transition-duration 0.5s
  transition-timing-function ease-out

#demo_container
  margin 0px -25px -25px
  position relative
  background #000
  border-radius 10px
  padding 5px
  border 1px solid #999
  box-shadow 0 0 10px #000

// @end styles

@media screen and (min-width: 480px)
  #background-container
    display block
    position fixed
    left 0
    right 0
    top 0
    bottom 0
    z-index -1
    overflow hidden

    > img
      position absolute
      width 110%
      left 0
      bottom 0

    #background-back
      max-width 100%

    #background-mid
      max-width 105%

    #background-front
      max-width 110%

  #main
    width 90%
    max-width 1024px
    margin 1em auto

    >header,
    >section,
    >div
      border-radius .75em




